<div class="col-md-6 col-md-offset-3">


<h2 class="text-center sign-head">Forgot your password?</h2>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email",class: "form-control"} %>
  </div></br>

  <div class="form-actions">
    <%= f.button :submit, "Send me reset password instructions",class: "btn-success btn btn-lg" %>
  </div>
<% end %>
</br>
<b><%= render "devise/shared/links"%></b>

</div>