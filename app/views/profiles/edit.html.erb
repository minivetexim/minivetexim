<div class="col-md-7 col-sm-7  col-md-offset-2">
<div class="w3-panel w3-card w3-responsive">
<div class="w3-container w3-margin-bottom">

<h3>Edit Business Information</h3>

<%=simple_form_for @profiles do |f| %>

<%= f.label :company_name,'Business Name'%></br>
<%= f.text_field :company_name,class: "form-control",:maxlength=>"50" %></br>

<%= f.label :minimun_order,'Minimum Order'%></br>
<%= f.text_field :minimun_order,class: "form-control",:maxlength=>"40" %></br>

<%= f.label :target_country,'Top three country you Import/Export from.'%></br>
<%= f.text_field :target_country,class: "form-control",:maxlength=>"60" %></br>

<%= f.label :about_company,'About Business'%></br>
<%= f.text_area :about_company,class: "form-control",:maxlength=>"500",:rows => 4,:cols => 60 %></br>

<%= f.submit"Update Business Info",:title => "Your photo, Birth year can't be blank", :rel => 'tooltip',class: "w3-btn w3-green"%>

<%end%>


</div>
</div>
</div>
